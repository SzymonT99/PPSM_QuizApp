<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D6D6"
    tools:context=".ui.fragments.UserResultFragment">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="300dp"
        android:layout_height="182dp"
        android:src="@drawable/app_logo"
        app:layout_constraintBottom_toTopOf="@+id/user_nick_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/play_again_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/button_layout"
        android:text="Zagraj ponownie"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_passwd"
        app:layout_constraintVertical_bias="0.126" />

    <Button
        android:id="@+id/check_ranking_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_layout"
        android:text="Sprawdź ranking"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_passwd"
        app:layout_constraintVertical_bias="0.126" />

    <TextView
        android:id="@+id/max_question_text"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:width="170dp"
        android:height="40dp"
        android:background="#AD95D6"
        android:fontFamily="@font/alice"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text="max pytań"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/points_text"
        app:layout_constraintEnd_toStartOf="@+id/max_question_vaue"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correct_answer_text" />

    <TextView
        android:id="@+id/max_question_vaue"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginEnd="36dp"
        android:width="170dp"
        android:height="40dp"
        android:background="#AD95D6"
        android:fontFamily="@font/alice"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="200"
        android:textAlignment="center"
        android:textColor="#D81616"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/points_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/max_question_text"
        app:layout_constraintTop_toBottomOf="@+id/correct_answers_value" />

    <TextView
        android:id="@+id/user_nick_value"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:width="340dp"
        android:height="60dp"
        android:background="#AD95D6"
        android:fontFamily="@font/alice"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="nazwa użytkownika: "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.378" />

    <TextView
        android:id="@+id/correct_answer_text"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:width="170dp"
        android:height="40dp"
        android:background="#E0D2FA"
        android:fontFamily="@font/alice"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text="poprawne odpowiedzi"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/max_question_text"
        app:layout_constraintEnd_toStartOf="@+id/correct_answers_value"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_nick_value" />

    <TextView
        android:id="@+id/correct_answers_value"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginEnd="36dp"
        android:width="170dp"
        android:height="40dp"
        android:background="#E0D2FA"
        android:fontFamily="@font/alice"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="12"
        android:textAlignment="center"
        android:textColor="#D81616"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/max_question_vaue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/correct_answer_text"
        app:layout_constraintTop_toBottomOf="@+id/user_nick_value"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/points_text"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:width="170dp"
        android:height="40dp"
        android:background="#E0D2FA"
        android:fontFamily="@font/alice"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text="punkty"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/date_text"
        app:layout_constraintEnd_toStartOf="@+id/points_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/max_question_text" />

    <TextView
        android:id="@+id/points_value"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginEnd="36dp"
        android:width="170dp"
        android:height="40dp"
        android:background="#E0D2FA"
        android:fontFamily="@font/alice"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="23 pkt. "
        android:textAlignment="center"
        android:textColor="#D81616"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/date_vaue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/points_text"
        app:layout_constraintTop_toBottomOf="@+id/max_question_vaue" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="24dp"
        android:width="170dp"
        android:height="40dp"
        android:background="#AD95D6"
        android:fontFamily="@font/alice"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text="data"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/play_again_btn"
        app:layout_constraintEnd_toStartOf="@+id/date_vaue"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/points_text" />

    <TextView
        android:id="@+id/date_vaue"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="24dp"
        android:width="170dp"
        android:height="40dp"
        android:background="#AD95D6"
        android:fontFamily="@font/alice"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="2020-12-12 21:12:31"
        android:textAlignment="center"
        android:textColor="#D81616"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/play_again_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/date_text"
        app:layout_constraintTop_toBottomOf="@+id/points_value" />


</androidx.constraintlayout.widget.ConstraintLayout>