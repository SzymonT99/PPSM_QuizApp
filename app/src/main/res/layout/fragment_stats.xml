<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AuthorizeFragment">

    <TextView
        android:id="@+id/PlayersName"
        android:layout_width="138dp"
        android:layout_height="18dp"
        android:text="Nazwa Gracza"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/logoImage"
        app:layout_constraintEnd_toEndOf="@+id/logoImage"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="@+id/logoImage"
        app:layout_constraintTop_toTopOf="@+id/logoImage"
        app:layout_constraintVertical_bias="0.495" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="365dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/stats"
        app:layout_constraintBottom_toTopOf="@+id/text_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.288" />

    <TextView
        android:id="@+id/Stats_Games_Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liczba gier:"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImage"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/Stats_Games_Total_Value"
        android:layout_width="408dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="79"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Stats_Games_Total"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Stats_Correct_Answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Poprawne odpowiedzi:"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Stats_Games_Total_Value"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Stats_Correct_Answers_Value"
        android:layout_width="408dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="79"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Stats_Correct_Answers"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Stats_Incorrect_Answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Niepoprawne odpowiedzi:"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Stats_Correct_Answers_Value"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Stats_Incorrect_Answers_Value"
        android:layout_width="408dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="79"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Stats_Incorrect_Answers"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Stats_Questions_Added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Dodane pytania:"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Stats_Incorrect_Answers_Value"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Stats_Questions_Added_Value"
        android:layout_width="408dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="12"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Stats_Questions_Added"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Stats_Current_Rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Obecny ranking:"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Stats_Questions_Added_Value"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Stats_Current_Rank_Value"
        android:layout_width="408dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="3"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Stats_Current_Rank"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>