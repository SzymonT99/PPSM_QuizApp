<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AuthorizeFragment">

    <TextView
        android:id="@+id/authors_speech"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="#aedd94"
        android:gravity="center"
        android:text="Jesteśmy pasjonatami i samoukami.\n Chcemy ciągle rozwijać nasze oprogramowanie,aby zapewnić wysokiej jakości aplikacje."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259" />

    <TextView
        android:id="@+id/authors"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:background="#aedd94"
        android:gravity="center_horizontal"
        android:text="Autorzy:\nAdam Kulas\nSzymon Tyrka"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.683" />
</androidx.constraintlayout.widget.ConstraintLayout>